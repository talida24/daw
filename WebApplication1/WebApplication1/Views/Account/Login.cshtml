@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Login";
}
<div class="login">

    <section class="container">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <h4 style="color: #f53f2c">If you want to write your letter, please log in. Santa needs to know who wrote it!</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChildEmail"></label>
                <input asp-for="ChildEmail" class="form-control" />
                <span asp-validation-for="ChildEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log in</button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
            </div>
        </form>
    </section>

    <div class="calltoaction">
        <div class="lightoverlay">
            <div class="container">
                <div class="col-md-4">
                    <img src="~/images/tree.gif" alt="">
                </div><!--CALL-TO-ACTION IMAGE END-->
                <div class="sectionhead content col-md-8">
                    <h2>You don't have <span class="highlight">an account</span> ?</h2>
                    <p>
                        No worries! You can create an account in just one minute. Please click on the button Register and you'll be redirected to anotehr page. Please remember that one of your parents have to be present.

                    </p>
                    <a href="Register" class="btn btn-default">Register</a>
                </div><!--CALL-TO-ACTION CONTENT END-->
            </div><!--CALL-TO-ACTION CONTAINER END-->
        </div><!--CALL-TO-ACTION OVERLAY END-->
    </div><!--CALL-TO-ACTION END-->
    <hr />
    <!--footer-->
    <div class="footer" style="margin-top: 20px;">
        <div class="container">
            <footer class="container text-center">
                <h2 class="logo">Santa<span class="highlight">Go</span></h2>
                <img class="santacap" src="~/images/santa_cap.png" alt="">
                <P>Another free Bootstrap Landing page temlate from <a href="http://evenfly.com">EvenFly</a> released under <a href="https://creativecommons.org/licenses/by/3.0/">CC 3.0</a> license.</P>
                <hr>
            </footer>
        </div>
    </div>
    <!--//footer-->

</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
